const App=()=>
{
  let curTime=new Date().toLocaleTimeString();
  const [cTime,newTime] = useState(curTime);
  const updateTime=()=>
  {
    curTime=new Date().toLocaleTimeString();
    newTime(curTime);
  }
       return(
 <div className="app">
<>
<h1>{cTime}</h1>
<h2><button className="btn btn-primary btn-lg" onClick={updateTime} >Get current time‚è≤ </button></h2>
</>
</div>
 );

}
export default App;